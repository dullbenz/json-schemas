{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "patternProperties": {
        "^.+$": {
            "type": "object",
            "properties": {
                "apiUrl": {
                    "type": "string",
                    "format": "uri",
                    "description": "Base API URL for the backend service"
                },
                "apiKey": {
                    "type": "string",
                    "minLength": 1,
                    "description": "API key for authentication"
                },
                "cronConfig": {
                    "type": "object",
                    "patternProperties": {
                        "^/.*$": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string",
                                    "maxLength": 255,
                                    "description": "Name of the cron job"
                                },
                                "description": {
                                    "type": "string",
                                    "description": "Optional description of the cron job"
                                },
                                "schedule": {
                                    "type": "string",
                                    "maxLength": 100,
                                    "description": "Cron schedule expression (e.g., '*/2 * * * *')"
                                },
                                "httpMethod": {
                                    "type": "string",
                                    "enum": [
                                        "GET",
                                        "POST",
                                        "PUT",
                                        "PATCH",
                                        "DELETE"
                                    ],
                                    "description": "HTTP method to use when calling the endpoint"
                                },
                                "payload": {
                                    "type": "object",
                                    "description": "Optional JSON payload to send with the request",
                                    "default": {}
                                },
                                "retryCount": {
                                    "type": "integer",
                                    "minimum": 0,
                                    "default": 3,
                                    "description": "Number of retry attempts on failure"
                                },
                                "timeoutMs": {
                                    "type": "integer",
                                    "minimum": 1000,
                                    "default": 10000,
                                    "description": "Request timeout in milliseconds"
                                },
                                "isCritical": {
                                    "type": "boolean",
                                    "default": false,
                                    "description": "Whether this job is critical for system operation"
                                },
                                "enabled": {
                                    "type": "boolean",
                                    "default": true,
                                    "description": "Whether the cron job is currently enabled"
                                },
                                "retryOnMiss": {
                                    "type": "boolean",
                                    "default": true,
                                    "description": "Whether to retry if the job execution window is missed"
                                },
                                "retryOnMissWindow": {
                                    "type": "integer",
                                    "minimum": 60000,
                                    "default": 300000,
                                    "description": "Window in milliseconds to retry missed executions"
                                }
                            },
                            "required": [
                                "httpMethod",
                                "name",
                                "description",
                                "schedule"
                            ],
                            "additionalProperties": false
                        }
                    },
                    "additionalProperties": false
                }
            },
            "required": [
                "apiUrl",
                "apiKey",
                "cronConfig"
            ],
            "additionalProperties": false
        }
    },
    "additionalProperties": false
}
